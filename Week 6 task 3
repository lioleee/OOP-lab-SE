package computer;

public class Computer {

    String name;
    String config;
    String Os;
    double cost;
    void displayDetails(){
        System.out.println( name);
                System.out.println( config);
                        System.out.println("The cost is:"+cost);
                                System.out.println( Os);



    }
    public static void main(String[] args) {
        Computer c=new Computer();
